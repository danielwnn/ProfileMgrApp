@model ProfileMgrApp.Models.EmployeeProfile

@{
    ViewData["Title"] = "Create Profile";
}

<div class="page-header">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Employee Profile</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <form id="formEmployeeProfile" method="POST" enctype="multipart/form-data" asp-action="Create" class="form-horizontal">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Department" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Department" class="form-control" />
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhotoData" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input id="photoFile" name="PhotoFile" type="file" accept="image/*" />
                            <span id="msgPhoto" asp-validation-for="PhotoData" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <input id="btnSubmit" type="submit" value="Create" class="btn btn-info" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-8">
                <canvas id="imgCanvas" width="600" style="display: none" class="img-thumbnail"></canvas>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_JavaScriptsPartial");}
}
