@model ProfileMgrApp.Models.EmployeeProfile

@{
    ViewData["Title"] = "Delete Profile";
}

<div class="page-header">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="alert alert-warning" role="alert">
    <span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
    <b>Are you sure you want to delete this profile?</b>
</div>

<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Employee Profile</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <form id="formEmployeeProfile" asp-action="Delete" class="form-horizontal">
                    <div class="form-group">
                        <label asp-for="ID" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="ID" class="form-control" readonly />
                            <span asp-validation-for="ID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="FirstName" class="form-control" readonly />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="LastName" class="form-control" readonly />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Title" class="form-control" readonly />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Department" class="col-sm-4 control-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Department" class="form-control" readonly />
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <input type="submit" value="Delete" class="btn btn-info" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-8">
                @{
                    if (!String.IsNullOrEmpty(Model.PhotoType))
                    {
                        <img src="data:@Model.PhotoType;base64,@Convert.ToBase64String(Model.PhotoData, 0, Model.PhotoData.Length)"
                             class="img-thumbnail" width="600" />
                    }
                    else
                    {
                        <img src="/images/no-photo.png" class="img-thumbnail" width="600" />
                    }
                }
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
